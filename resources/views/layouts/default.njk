<!DOCTYPE html>
<html>
  <head>
    <title>Sakshat</title>
    <meta charset="utf-8">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta content="sakshat app" name="keywords">
    <meta content="Sakshat Team" name="author">
    <meta content="Sakshat | SIH-2018" name="description">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <link href="{{ url('/') }}favicon.png" rel="shortcut icon">
    <link href="{{ url('/') }}apple-touch-icon.png" rel="apple-touch-icon">

    <!--  All Compiled CSS (via npm libraries)  -->
    <link href="{{ url('/') }}css/all.css" rel="stylesheet">
    <!--  Materialize Core CSS  -->
    <link href="{{ url('/') }}css/materialize.min.css" rel="stylesheet">
    {% block css %}{% endblock %}
  </head>
  <body>

    <div class="wrapper">
        {% include 'layouts/left-sidebar' %}
        {% include 'layouts/right-sidebar' %}
        {% block content %}{% endblock %}
        {% include 'layouts/footer' %}
    </div>

    <!--  jQuery  -->
    <script src="{{ url('/') }}js/jquery-3.2.1.min.js"></script>
    <!--  All Compiled JS (via npm libraries)  -->
    <script src="{{ url('/') }}js/all.js"></script>
    <!--  Minified Materialize  -->
    <script src="{{ url('/') }}js/materialize.min.js"></script>

    <script type="text/javascript">
      {% for key, message in flashMessages %}
          if ('{{ key }}' === 'success') {
            toastr["success"]("{{ message }}")
          } else {
            toastr["error"]("{{ message }}")
          }
      {% endfor %}
    </script>

    {% block js %}{% endblock %}
  </body>
</html>
